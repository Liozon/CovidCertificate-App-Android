<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="horizontal"
	android:paddingHorizontal="@dimen/spacing_large"
	android:paddingVertical="@dimen/spacing_medium_small">

	<ImageView
		android:id="@+id/mode_list_info_image"
		android:layout_width="42dp"
		android:layout_height="wrap_content"
		android:layout_gravity="top|start"
		android:adjustViewBounds="true"
		android:maxHeight="32dp"
		android:scaleType="fitCenter"
		android:src="@drawable/ic_2g_plus" />

	<TextView
		android:id="@+id/mode_list_info_text"
		style="@style/CovidCertificate.Text"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginStart="@dimen/spacing_medium_small"
		android:breakStrategy="high_quality"
		android:gravity="start"
		android:hyphenationFrequency="normal"
		tools:text="Hier könnte ein Text stehen, der erklärt was 3G bedeutet und dass der Zertifikatstyp für 3G ok ist." />
</LinearLayout>