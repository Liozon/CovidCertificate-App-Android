<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="horizontal"
	android:paddingVertical="@dimen/spacing_medium_small">

	<ImageView
		android:id="@+id/icon"
		android:layout_width="@dimen/icon_size_small"
		android:layout_height="@dimen/icon_size_small"
		android:layout_gravity="top|start"
		android:adjustViewBounds="true"
		android:scaleType="fitCenter"
		tools:src="@drawable/ic_travel" />

	<TextView
		android:id="@+id/hintText"
		style="@style/CovidCertificate.Text"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginStart="@dimen/spacing_large"
		android:breakStrategy="high_quality"
		android:gravity="start"
		android:hyphenationFrequency="normal"
		tools:text="Die Einreiseregeln können sich ändern. Prüfen Sie daher die Gültigkeit kurz vor der Abreise und informieren Sie sich zusätzlich online über die aktuellen Einreiseregeln des Ziellandes. " />
</LinearLayout>